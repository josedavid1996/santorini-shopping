
<div>


  <div class="container__cart-shops">
    {% for block in section.blocks %}
      {% if block.type == 'data-shops' %}
      {% render 'cart-shops', 
          image:block.settings.image_shops,
          title:block.settings.title_shops,
          paragraph:block.settings.paragraph_shops,
          text-button:block.settings.text_button_shops,
          %}
        
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "our-shops",
    "tag": "section",
    "class": "container-our-shops",
    "limit": 1,
    "blocks": [
      {
        "name": "Data shops",
        "type": "data-shops",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_shops",
            "label": "Ingresar una imagen"
          }, {

            "type": "text",
            "id": "title_shops",
            "label": "Ingresa un titulo"

          }, {
            "type": "text",
            "id": "paragraph_shops",
            "label": "Ingresa un parrafo"
          }, {
            "type": "text",
            "id": "text_button_shops",
            "label": "Ingresa un texto para el boton"
          }
        ]
      }
    ]

  }
{% endschema %}