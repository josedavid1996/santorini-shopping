<style>
  .container-image-hero {
    width: 100%;
    height: 39vw;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .container-image-hero__img {
    width: 100%;
    object-fit: cover;
  }
</style>

<img class="container-image-hero__img" src="{{ section.settings.image | img_url: '1650x' }}" alt="">

{% schema %}
{
"name":"image-hero",
"tag":"section",
"class":"container-image-hero",
"limit":1,
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image hero"
}
]
}
{% endschema %}